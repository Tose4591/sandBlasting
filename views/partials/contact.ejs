<div class="row contactForm">
    <div class="contactFormDiv">
        <div class="contactFormInnerDiv col-md-8 offset-md-2">
            <h2 class="mb-3 contactHeading">Send Us a Message</h2>    
            <form action="/" id="contactForm" class="needs-validation">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-4 form-group">
                            <input type="text" class="form-control" id="name" placeholder="Your Name" aria-label="Your Name">
                        </div>
                        <div class="col-lg-4 form-group">
                            <input type="email" class="form-control" id="email" placeholder="Email Address" aria-label="Email Address">
                        </div>
                        <div class="col-lg-4 form-group">
                            <input type="tel" class="form-control" id="phone" placeholder="Contact Number" aria-label="Contact Number" required>
                        </div>
                    </div>
                    <div class="form-group"><input type="text" class="form-control" id="location" placeholder="Your Location" aria-label="Your Location"></div>
                    <div class="form-group"><textarea class="form-control" name="message" id="message" cols="30" rows="5" placeholder="Message" aria-label="Message"></textarea></div>
                    <button class="btn contactSubmit">SUBMIT</button>
                    <p class="contactMessage">Zdravo</p>
                </div>
            </form>
            
        </div>
    </div>
</div>